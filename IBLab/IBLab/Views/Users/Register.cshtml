@{
}
<h1 class="text-center">Registration page</h1><br />

@if (TempData["ErrorMessage"] != null)
{
    <div class="danger text-center">
        <div class="alert alert-danger">
            <p>@TempData["ErrorMessage"]</p>
        </div>
    </div>

}

<form method="post" asp-action="Register" class="text-center">
    <div>
        <div>
            <label class="fw-bold" for="Email">Email:</label>
            <input type="email" id="Email" name="Email" required />
        </div><br />
        <div>
            <label class="fw-bold" for="Username">Username:</label>
            <input type="text" id="Username" name="Username" required />
        </div><br />
        <div>
            <label class="fw-bold" for="Password">Password:</label>
            <input type="password" id="Password" name="Password" required />
        </div><br />
        <div>
            <button type="submit">Register</button>
        </div><br />

        <div>
            <a href="/Users/Login">Allready have an acoount? Login in!</a>
        </div>
    </div>
</form>
